                            android:layout_width="@dimen/new_account_form_image_width"
                            android:layout_height="@dimen/new_account_form_image_height"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_mail"
                            android:tint="@color/gray_tint_color" />

                        <EditText
                            android:id="@+id/contractor_email_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/new_account_edit_text_margin_right"
                            android:hint="@string/txt_mail"
                            android:inputType="textEmailAddress"
                            android:lines="1"
                            android:maxLines="1"
                            android:textColorHint="@color/color_form_hint"
                            android:textSize="@dimen/new_account_edit_text_hint_text_size" />

