                            android:layout_gravity="center_vertical"
                            android:tint="@color/gray_tint_color" />

                        <EditText
                            android:id="@+id/company_age_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/new_account_edit_text_margin_right"
                            android:hint="@string/txt_age"
                            android:inputType="date"
                            android:textColorHint="@color/color_form_hint"
                            android:textSize="@dimen/new_account_edit_text_hint_text_size" />

                    </LinearLayout>

                    <LinearLayout
